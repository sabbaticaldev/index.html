{
  "include": ["src"],
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node"
  }
}
